/* pages/my_order/my_order.wxss */
page{font-family: "Microsoft YaHei";width: 100%;min-height: 100%;background: #f6f6f6;}
.fiexd-top{height: 80rpx;}
.padded-top{padding-top: 80rpx;}
.nav{width: 25%;height: 100%;line-height: 80rpx;text-align: center;box-sizing: border-box;color: #333;}
.on{font-size: 32rpx;font-weight: 600;}
.off{font-size: 30rpx;font-weight: 500;}

navigator{box-sizing: border-box;background: #fff;}
.left{width: 15%;padding-top: 15%;height: 0;}
.left .order_img{position: absolute;left: 0;right: 0;width: 100%;height: 100%;}
.right{width: 83%;line-height: 60rpx;margin-left: 2%;}
.btn_case{padding: 0 30rpx 30rpx;}
.handle{width:165rpx;line-height: 75rpx;border-radius: 2rpx;text-align:center;font-size: 34rpx;border:1rpx solid #e71751;color: #e71751;}
