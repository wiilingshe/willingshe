/* pages/menu/menu.wxss */
page{background: #f6f6f6;width: 100%;height: 100%;}
.header{background: #fff;}
.info_case{width: 75%;margin-left:0.5rem;}

.nav_list{height:80rpx;}
.nav{padding: 0 30rpx;box-sizing: border-box;height:100%;margin-right: 20rpx;color:#444444;line-height: 85rpx;}
.nav.active{color: #ff1456;border-bottom: 1rpx solid #ff1456;}
.clo_img{width: 37rpx;height: 35rpx;}
.menu{width: 24.5%;height: 100%;background: #f1f1f1;box-sizing: border-box;padding-bottom: 98rpx;}
.menu .item{width:100%; font-size:32rpx;height: 100rpx;
line-height: 100rpx;text-align: center;}

.btm{width: 100%;height: 100%;padding-bottom: 100rpx;box-sizing: border-box;}
.btm_box{height: 100%;}


.list{width: 75.5%;height: 100%;box-sizing: border-box;padding-bottom: 98rpx;}
.list_item{width: 100%;background: #fff;box-sizing: border-box;}
.list_item .goods_img{width: 25%;padding-top: 25%;position: relative;height:0;}
.list_item .goods_img image{position: absolute;width: 100%;height: 100%;}
.list .title{height: 71rpx;background: #f1f1f1;border-left: 1rpx solid #c3c2c2;padding:0 20rpx;box-sizing: border-box;}
.list_item .info{width: 74%;}
.info_btm{height: 60rpx;}
.name{line-height: 42rpx;}
.des{line-height: 32rpx;}
.account{width: 60rpx;line-height: 45rpx;font-size: 38rpx;color:#333;text-align: center;}
.status1{height:38rpx;width:75rpx;text-align:center;border: 1px solid #ff942c;font-size:22rpx;color:#ff942c;line-height: 38rpx;border-radius: 38rpx;}
.status2{height:38rpx;width:70rpx;text-align:center;border: 1px solid #ff0a4e;font-size:22rpx;color:#ff0a4e;line-height: 38rpx;border-radius: 38rpx;}
.status3{height:38rpx;width:70rpx;text-align:center;border: 1px solid #30b601;font-size:22rpx;color:#30b601;line-height: 38rpx;border-radius: 38rpx;}
.icon_img{width:48rpx;height:48rpx;}
.chosse_btn{line-height: 50rpx;width: 100rpx;background: #ff0a4e;text-align: center;color:#fff;font-size: 24rpx;border-radius: 50rpx;}
.float{position: absolute;right:-8rpx;top:-8rpx;width: 30rpx;height: 30rpx;font-size: 22rpx;color: #fff;background: #ff0a4e;border-radius: 50%;text-align: center;line-height: 30rpx;}

.headimage{width: 10%;padding-top:10%;position: relative;}
.headimage image{border-radius: 50%;left: 0;top:0;height: 100%;}
.right_case{width: 86%;margin-left: 4%;color: #444;}
.btm_case{padding-left: 14%;margin-left: 20rpx;}
.content{line-height:45rpx; }
.eva_image{width: 32%;padding-top: 32%;position: relative;}
.eva_image image{position: absolute;left: 0;top:0;width:100%;height: 100%;}
.reply{padding: 25rpx 20rpx;box-sizing: border-box;background: #f2f2f2;line-height: 35rpx;}

.hide_case{width: 100%;height: 700px;}
.menu2{padding: 20rpx 0 10rpx; background: #fff;}
.menu2 .item{width: 21%;line-height: 60rpx;text-align: center;margin: 0 2% 20rpx;font-size:28rpx;border-radius: 60rpx;box-sizing: border-box;}




.info{padding: 10rpx ;}

.sale{color: #9b9b9b;}
.size{height:55rpx;padding: 0 20rpx;background: #fe7d00;color:#fff;font-size: 28rpx;border-radius:55rpx;}
.img{width: 85rpx;height:85rpx;}
.number{width: 35rpx;height: 35rpx;background: #e71751;color:#fff;font-size:24rpx;line-height: 35rpx;text-align: center;border-radius: 50%;position: absolute;top:-4rpx;left:60rpx;}
 
 .pupop{background: rgba(0, 0, 0, 0.3)}

.pup_good{width: 80%;height:750rpx;background: #fff;border-radius: 10rpx; }
.good_img{width: 100%;height: 540rpx;}
.good_name{height: 88rpx;line-height: 44rpx;}

.pup_spec{width: 80%;background: #fff;border-radius: 10rpx;height:650rpx;}
.icon_c{right:20rpx;top:20rpx;position:absolute;}
.spec_top{line-height: 40rpx;margin-top: 90rpx;margin-bottom: 30rpx;}
.padded_40{padding: 20rpx 40rpx;}
.pupop radio{display: none;}
.r_la{padding: 20rpx 40rpx;margin: 20rpx 20rpx 0 0;border-radius: 10rpx;}
.on{background: #e71751;color:#fff;}
.off{background: #dddddd;color:#333;}
.spec_scroll{max-height: 400rpx;overflow: auto;padding-bottom: 20rpx;box-sizing:border-box; }
.pop_b{box-sizing: border-box;background: #fff;bottom: 0;height: 100rpx;position: absolute; left:0;width:100%;}
.btn-pop{width: 40%;color:#fefefe;height: 100%;line-height: 100rpx;text-align: center;background: #e71751;}

.goods_name{text-align: center;padding: 30rpx 3% 0;}


.mid_pupop icon{position: absolute;right:20rpx;top:20rpx;}




.cart_case{z-index: 50;bottom:100rpx;}
.cart{z-index: 90;background: #fff;bottom: 0;position: absolute;left: 0;width: 100%;}
.clear_img{width: 25rpx;height:32rpx;margin-right: 10rpx;}
.cart_top{background: #e1e6e8;color:#333;padding: 30rpx 3%;}
.cart .item{height: 125rpx;box-sizing: border-box;}
.cart .item .text{line-height: 40rpx;width: 50%;}

.tip{position: fixed;z-index: 18;width: 100%;height: 60rpx;box-sizing: border-box;padding: 0 3%;background: #f7e2a3;left: 0;color: #434343;border-bottom: 1rpx solid #fbd45e;}