@import "/component/taskSubmit/taskSubmit.wxss";
.basicinfo .tab1{
	display: flex;
	justify-content: space-between;
	padding-left: 89rpx;
	padding-right: 89rpx;
	font-size: 26rpx;
	color: #666;
	height: 70rpx;
	line-height: 70rpx;
	border-bottom: 1rpx solid #eee;
	margin-top: 25rpx;
}
.basicinfo .tab2{
	display: flex;
	justify-content: space-between;
	height: 120rpx;
	line-height: 120rpx;
	font-size: 28rpx;
	padding-left: 76rpx;
	padding-right: 60rpx;
}
.basicinfo .tab2 .name1{
	color: #333;
	font-weight: bold;
}
.basicinfo .tab2 .btn{
	width: 120rpx;
	height: 60rpx;
	border-radius: 32rpx;
	background-image: -webkit-linear-gradient(90deg, #FF5874, #FE7293);
	text-align: center;
	line-height: 60rpx;
	color: #fff;
	margin-top: 30rpx;
}
.basicinfo .tab2 .btn2{
	width: 120rpx;
	height: 60rpx;
	border-radius: 32rpx;
	background-color: #BBBBBB;
	text-align: center;
	line-height: 60rpx;
	color: #fff;
	margin-top: 30rpx;
}
.citylist{
	display: flex;
	/*justify-content: flex-start;*/
	flex-wrap:wrap;
	font-size: 26rpx;
	margin-left: 45rpx;
	margin-right: 45rpx;
}
.citylist .citylistitem{
	width: 140rpx;
	height: 50rpx;
	border-radius: 26rpx;
	border:1rpx solid #999999;
	text-align: center;
	line-height: 50rpx;
	margin-top: 29rpx;
	color: #666;
}
.citylist .citylistitem1{
	border:1rpx solid #FFA148;
	color: #FFA148;
}
.basicinfo{
	background-color: #fff;
	height: auto;
}
.bg{
	background-color: rgba(0,0,0,0.6);
	position: fixed;
	z-index: 1;
	width:100%;
	height: 100vh;
	top: 0;
	left: 0;
}
.alertModal{
	width: 510rpx;
	height: 350rpx;
	border-radius: 10rpx;
	background-color: #fff;
	margin: auto;
	position: absolute;
	top: 0; left: 0; bottom: 0; right: 0;
	z-index: 2;
}
.alertModal_title{
	text-align: center;
	font-weight: bold;
	font-size: 32rpx;
	margin-top: 24rpx;
	padding-bottom: 24rpx;
	border-bottom: 1rpx solid #eee;
}
.alertModal_content{
	text-align: center;
	color: #666;
	font-size: 28rpx;
	padding-top: 66rpx;
	padding-bottom: 66rpx;
	border-bottom: 1rpx solid #eee;
}
.alertModal_content text{
	color: #333;
}
.alertModal_btn{
	display: flex;
	justify-content: space-between;
	font-size: 34rpx;
}
.alertModal_btn_left,.alertModal_btn_right{
	width: 50%;
	text-align: center;
	line-height: 80rpx;
}
.alertModal_btn_right{
	color: #FF5975;
	border-left: 1rpx solid #eee;
}
.nodata image{
	width: 100rpx;
	height: 100rpx;
	margin-left: calc(50% - 44rpx);
	margin-top: 20rpx;
}
.nodata view{
	text-align: center;
	font-size: 26rpx;
	color: #999;
	padding-bottom: 20rpx;
}