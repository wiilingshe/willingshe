	width: 690rpx;
	margin: 0 auto;
	border-bottom: 1rpx solid #EEEEEE;
}
.tou .touleft{
	font-size: 28rpx;
	color: #333;
	line-height: 200rpx;
}
.tou .touright{
	height: 200rpx;
