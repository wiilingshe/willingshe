.home{
	/*padding-top: 54rpx;
	padding-bottom: 40rpx;*/
	width: 100%;
	/*height: 100vh;*/
	white-space: nowrap;
	position: relative;
	left: 0rpx;
}
.home .home_item{
	width: 600rpx;
	height: 1000rpx;
	background-color: #fff;
	border-radius: 15rpx;
	box-shadow: 0rpx 0rpx 40rpx #DDDDDD;
	display: inline-block;
}
.current{
	margin-left: 75rpx;
}
.other{
	margin-left: 30rpx;
}
.home_item .pic{
	width: 250rpx;
	height: 355rpx;
	/*margin-left: 175rpx;
	margin-top: 80rpx;*/
}
.home_item .title{
	text-align: center;
	font-size: 44rpx;
	font-weight: bold;
	width: 500rpx;
	margin: 0 auto;
	display: block;
	margin-top: 30rpx;
	white-space: nowrap;
	overflow-x: hidden;
	text-overflow: ellipsis;
}
.home_item .en_title{
	font-size: 26rpx;
	text-align: center;
	color: #999;
	margin-top: 10rpx;
	margin-bottom: 100rpx;
}
.home_item .details{
	text-align: center;
	font-size: 28rpx;
	color: #666;
	margin-bottom: 10rpx;
	width: 500rpx;
	margin: 0 auto;
	display: block;
	white-space: nowrap;
	overflow-x: hidden;
	text-overflow: ellipsis;
}
.home_item .btn{
	width: 230rpx;
	height: 76rpx;
	border-radius: 38rpx;
	background-image: -webkit-linear-gradient(90deg, #FF5874, #FE7293);
	color: #fff;
	text-align: center;
	line-height: 76rpx;
	font-size: 30rpx;
	margin-top: 35rpx;
}
.attention{
	display: flex;
	justify-content: flex-start;
	width: 100%;
	height: 90rpx;
	background-color: #FFEBF0;
	color: #FF5975;
	font-size: 30rpx;
	position: fixed;
	top: 0;
	z-index: 2;
}
.attention image{
	width: 28rpx;
	height: 34rpx;
	margin-left: 30rpx;
	margin-top: 28rpx;
	margin-right: 20rpx;
}
.attention_left{
	display: flex;
	justify-content: flex-start;
}
.attention_left text{
	line-height: 90rpx;
	vertical-align: top;
}
.attention_right view{
	width: 150rpx;
	height: 55rpx;
	line-height: 55rpx;
	border: 2rpx solid #FF5975;
	border-radius: 5rpx;
	text-align: center;
	margin-top: 16rpx;
	margin-left: 160rpx;
	font-size: 28rpx;
}
.tip .kefu{
	width: 100%;
	height: 90rpx;
	background-color: #eee;
	position: absolute;
	z-index: 3;
	bottom: 0;
	opacity: 0;
}
.bg{
	width: 100%;
	height: 100vh;
	background-color: rgba(0,0,0,0.6);
	position: fixed;
	top: 0;
	z-index: 3;
}
.tip{
	border-radius: 10rpx;
	background-color: #fff;
	position: fixed;
	/*margin: auto;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;*/
	top: calc(50vh - 145rpx);
	left: calc(50% - 250rpx);
	z-index: 4;
	width: 500rpx;
	height: 290rpx;
}
.tip_zi{
	line-height: 46rpx;
	font-size: 26rpx;
	margin: 32rpx 48rpx;
}
.tipbtn{
	width: 100%;
	border-top: 1px solid #CCCCCC;
	font-size: 28rpx;
	color: #FF5975;
	line-height: 92rpx;
	text-align: center;
}
.picbox{
	width:250rpx;
	height:355rpx;
	box-shadow: 0rpx 0rpx 40rpx #DDDDDD;
	margin: 0 auto;
	margin-top: 80rpx;
	position: relative;
}
.picbox .picbox_top{
	width: 90rpx;
	height: 38rpx;
	font-size: 24rpx;
	text-align: center;
	line-height: 38rpx;
	color: #fff;
	position: absolute;
	left: 0;
	background-color: #FF4D63;
	border-bottom-right-radius: 20rpx;
}