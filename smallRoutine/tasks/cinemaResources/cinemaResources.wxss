/* tasks/cinemaResources/cinemaResources.wxss */
.top {
    height: 222rpx;
    background: #FF4D63;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.topTitle {
    font-size: 40rpx;
    color: #FFFFFF;
    padding-top: 36rpx;
}

.topSubtitle {
    font-size: 28rpx;
    color: #FFFFFF;
    padding-top: 10 rpx;
}

.body {
    margin-top: -70rpx;
    padding: 0 10rpx;
}

.item {
    height: 220rpx;
    background-image: url(https://issuer.oopca.com/img/task/task_Details_bg1@2x.png);
    background-size: 100% 100%;
    padding: 40rpx 50rpx;
    box-sizing: border-box;
}

.line {
    width: 100%;
    height: 10 rpx;
    border-bottom: 2rpx dashed #ccc;
    margin-top: 30rpx;
}

.itemTitie {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.itemTitie > text {
    font-size: 30rpx;
    color: #333333;
    font-weight: 900;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: none;
    background: #FFA148;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
}

.plh {
    font-size: 26rpx;
    color: #999999;
}

.explain {
    font-size: 26rpx;
    color: #999999;
    margin-top: 10rpx;
}

.remarks {
    padding: 0 30rpx;
    margin-top: 20rpx;
}

.remarks > view {
    background: white;
    border-radius: 10rpx;
    height: 320rpx;
}

.remarksTitle {
    font-size: 30rpx;
    color: #333333;
    font-weight: 900;
    padding: 28rpx;
}

textarea {
    padding: 0 28rpx;
    font-size: 26rpx;
    color: #999999;
    width: 92%;
}

