/* tasks/search/search.wxss */
page{
  background: #f5f5f5;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
   padding: 24rpx 30rpx; 
  background: white;
}
.left{
  position: relative;
  width: 600rpx;
  height: 56rpx;
  background: #EEEEEE;
  border-radius: 28rpx;
  box-sizing: border-box;
}
.left>input{
  width: 90%;
  height: 56rpx;
  border-radius: 28rpx;
  color: #999999;
  font-size: 26rpx;
  margin-left: 56rpx;
}

.phcolor{
  font-size: 26rpx;
  color: #999999;
}
.left>image{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 50%;
  margin-top: -13rpx;
  margin-left: 24rpx;
}

.right{
  font-size: 28rpx;
  color: #FF4D63;
  line-height: 56rpx;
}


.body{
  padding: 30rpx;
}
.item{
  /* width: 690rpx; */
  height: 200rpx;
  background: white;
  border-radius: 10rpx;
  padding: 32rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  box-shadow:2rpx 2rpx 20rpx #EEEEEE; 
}
.titleBox{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}
.titleBox>.title{
  font-size: 28rpx;
  color: #333333;
  font-weight: 900;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 480rpx;  
}
.distance{
  margin-top: -4rpx;
  flex: 1;
  
}
.distance>text{
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx; 
}
.distance>image{
  width: 16rpx;
  height: 26rpx;
}
.address{
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.progress{
  color: #FFA148;
  font-size: 28rpx;
}

.nothing{
  padding: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #CCCCCC;
}