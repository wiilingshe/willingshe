/* tasks/card/card.wxss */
page{
  background: white
}
.map1{
  height: 714rpx;
  background: white;
  position: relative
}

#map{
  width: 100%;
  height: 100%;
}
.address>image{
  width: 24rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.time>image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.btn>image{
  width: 62rpx;
  height: 80rpx;
  margin-top: 34rpx;
}
.address,.time{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding:14rpx 30rpx;
}
.address>text,.time>text{
  font-size: 28rpx;
  color: #666666;
   overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  flex: 1;
}

.btnBox{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.btn{
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(to bottom right, #FE7293, #FF5874);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow:2rpx 2rpx 10rpx #FF4D63;
  margin-top: 0rpx;
  z-index: 99;
}
.btn text{
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: 'PingFang-SC-Medium';
  margin-top: 10rpx;
}
 .body{
box-shadow: 0rpx -10rpx 20rpx #FFFFFF;
position: relative;
z-index: 3;
} 
.pause{
  height:100%;
display:flex;
flex-direction:column;
align-items:flex-end;

}
.reset{
  width: 120rpx;
  height: 120rpx;
  margin-top: 80%;
}

.btn1{
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(to bottom right, #ABDE93, #87C767);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow:2rpx 2rpx 10rpx #BBBBBB;
  margin-top: 0rpx;
}
.btn1 text{
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: 'PingFang-SC-Medium';
  margin-top: 10rpx;
}
.btn1>image{
  width: 40rpx;
  height: 28rpx;
  margin-top: 62rpx;
}

.change{
  font-size: 38rpx;
  color: #FFA148;
  text-align: center;
  margin-top: 34rpx;
}