.youhuijuan{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background-color: #fff;
  z-index: 1;
}
.youhuijuan .item{
  position: relative;
  height: 245rpx;
  width: calc(100% - 60rpx);
  background: linear-gradient(to right,#cfa568,#e3bf79);
  padding-top: 52rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.youhuijuan .tag{
  height: 32rpx;
  background: #A48143;
  padding-left: 16rpx;
  padding-right: 16rpx;
  position: absolute;
  left: 20rpx;
  color: #fff;
  top: 20rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 32rpx;
}


.youhuijuan .content{
  margin-top: 24rpx;
  margin-left: 40rpx;
  display: flex;
  margin-right: 40rpx;
  flex-direction: row;
  align-items: center;
}

.youhuijuan .content .left{
  flex: 1;
}

.youhuijuan .name{
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 14rpx;
  width: 440rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.youhuijuan .time{
  font-size: 24rpx;
  color: rgba(255,255,255, 0.8);
  line-height: 30rpx;
}

.youhuijuan .content .right{
  width: 162rpx;
}

.youhuijuan .go{
  height: 48rpx;
  border:none;
  width: 162rpx;
  background: rgba(255,255,255, 0.8);
  border-radius: 4rpx;
  line-height: 48rpx;
  color: #b69150;
  font-size: 24rpx;
}

.youhuijuan .condition{
  position: absolute;
  width: calc(100% - 80rpx);
  bottom: 0;
  left:0;
  /*height: 78rpx;*/
  background: rgba(0,0,0,.08);
  padding: 24rpx 40rpx;
  display: flex;
  flex-direction: row;
}

.youhuijuan .condition .txt{
  display: block;
  height: 30rpx;
  flex: 1;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
}


.youhuijuan .condition .icon{
  margin-left: 30rpx;
  width: 24rpx;
  height: 24rpx;
}