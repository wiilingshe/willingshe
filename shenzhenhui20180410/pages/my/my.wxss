.top_bg{
  height:444rpx;
  background: #fff;
  margin-bottom: 0.3333rem;
}
.top_bg .bg{
    width: 100%;
    height: 264rpx;
    background-size: cover;
    background: no-repeat;
    background: #fff;
}
.top_bg .userImg{
    position: absolute;
    left: 50%;
    top: 15%;
    margin-left: -35px;
    border-radius: 100%;
    width: 70px;
    height: 70px;
    border: 8rpx solid #fff;
    background: #fff;
}
.top_bg .userName{
    position: relative;
    display: block;
    width: 100%;
    left: 0;
    top: 68rpx;
    text-align: center;
    color: black;
    font-size: 32rpx;
}
.top_bg .tel{
    font-size: 24rpx;
    color: #7c7c7c;
    margin-top: 10rpx;
}
.top_bg button{
    font-family: microsoft yahei;
    font-size: 28rpx;
    height: 38px;
}
.top_bg .cl{
   width: 310rpx;
   height: 64rpx;
   display: block;
}
.top_bg .bindable{
    background: #fff;
    position: absolute;
    margin-top: 100rpx;
    left: 50%;
    margin-left: -157rpx;

}
.bindable text{
   font-size: 24rpx;
   text-align: center;
   position: absolute;
   margin-left: 44rpx;
   margin-top: -58rpx;
   color: #fff;
}
.img-list button{
   width: 78%;
   position: relative;
   display: block;
   top: 120rpx;
   border: 30rpx;
   font-size: 28rpx;
   line-height: -28rpx;
   margin-bottom: 160rpx;
}
.img-list button text{
  margin-top: 12rpx;
}
.img-list  .my_box{
    background: #fff;
}
.img-list  .my_box .my_line{
    position: relative;
    border: 1px solid #e5e5e5;
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
}
.img-list  .my_box .ind{
     border-top:none;
}
.img-list  .my_box .my_line:last-child{
    border-bottom: none;
}
.img-list .my_box .my_line::after{
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    border: 8rpx solid #bbb;
    border-width: 1px 1px 0 0;
    transform: rotate(45deg);
    position: absolute;
    right: 15px;
    top: calc(50% - 5px);
}
.img-list  .my_box  image{
    width: 38rpx;
    height: 38rpx;
    margin: 24rpx 30rpx 0 30rpx;
    float: left;
}
.img-list .my_box m_tcontent{
    font-size: 28rpx;
    color: black;
    float: left;
    display: block;
    margin-left: 30rpx;
}
.img-list .m_content{
    background: white;
}